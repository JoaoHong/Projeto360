@model Projeto360.DAO.Models.Produto;
@{
    ViewData["Title"] = "Editar";
}

<div class="text-center">
    <h1 class="display-6">Editar Produto</h1>
</div>
<input hidden value="@Model.Id" id="produtoId" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form novalidate="novalidate" id="formProduto">
                        <div class="form-group row">
                            <div class="col-md-8">
                                <label for="nomeProduto" class="col-md-4 col-form-label">Nome do Produto</label>
                                <input type="text" name="nomeProduto" id="nomeProduto" class="form-control"  value="@Model.Nome" />
                            </div>
                            <div class="col-md-4">
                                <label for="valorProduto" class="col-md-4 col-form-label">Valor</label>
                                <input type="text" name="valorProduto" id="valorProduto" class="form-control"  value="@Model.Preco" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 ">
                                <label for="descricaoProduto">Descrição:</label>
                                <textarea class="form-control" name="descricaoProduto" id="descricaoProduto" rows="4" maxlength="230" >@Model.Descricao</textarea>
                            </div>
                        </div>
                        <div class="form-group text-center  ">
                            <button type="button" id="btnVoltar" onclick="voltar()" class="btn btn-secondary">Voltar</button>
                            <button type="button" id="btnEditar" class="btn btn-primary">Editar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/Home/Home.js" asp-append-version="true"></script>
<script type="text/javascript">
    $(function () {
        HomeAPI.initEditar();
    });
    function voltar() {
        window.history.back();
    };
    $(document).ready(function () {
        // Aplicar a máscara ao campo de valorProduto
        $("#valorProduto").maskMoney({
            prefix: "R$ ",
            decimal: ",",
            thousands: "."
        }).maskMoney('mask');
    });
</script>
