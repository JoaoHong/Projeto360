@{
    ViewData["Title"] = "Entrar";
}
<div class="text-center">
    <h1 class="display-6">Adicionar Login</h1>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form novalidate="novalidate" id="formLogin">
                        <div class="form-group row">
                            <div class="col-md-8">
                                <label for="nome" class="col-md-4 col-form-label">Nome</label>
                                <input type="text" name="nome" id="nome" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label for="senha" class="col-md-4 col-form-label">Senha</label>
                                <input id="senha" class="form-control form-control-lg form-control-solid" type="password" placeholder="Senha" name="senha" autocomplete="off" />
                            </div>
                        </div>

                        <div class="form-group text-center  ">
                            <button type="button" id="btnVoltar" onclick="voltar()" class="btn btn-secondary">Voltar</button>
                            <button type="button" id="btnAdicionar" class="btn btn-primary">Adicionar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/Account/Account.js" asp-append-version="true"></script>
<script type="text/javascript">
    $(function () {
       AccountAPI.initAdicionar();
    });
    function voltar() {
        window.history.back();
    };
</script>
